<mah:MetroWindow x:Class="MessengerBotManager.CheckMDB"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        GlowBrush="{DynamicResource MahApps.Brushes.Accent}"
        Title="설정 로드중..." Height="150" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label" Content="설정 로드중..." VerticalAlignment="Bottom" FontSize="20" HorizontalAlignment="Center"/>
        <Label x:Name="description" Grid.Row="1" VerticalAlignment="Top" FontSize="10" Content="기본 설정 확인중..." Height="30" HorizontalAlignment="Center"/>
    </Grid>
</mah:MetroWindow>
